.tab-bar {
  z-index: 18;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
  background: white;
}
.tab-bar .tab-left {
  float: left;
  position: absolute;
  margin-left: 20rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  top: 50%;
}
.tab-bar .tab-left image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.tab-bar .tab-center {
  position: absolute;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  top: 50%;
  text-align: center;
}
.tab-bar .tab-right {
  width: 140rpx;
  position: absolute;
  right: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  top: 50%;
}
.tab-bar .tab-right .serch {
  display: inline-block;
  margin-right: 20rpx;
}
.tab-bar .tab-right .serch image {
  width: 52rpx;
  height: 52rpx;
}
.tab-bar .tab-right .add {
  display: inline-block;
  margin-right: 20rpx;
}
.tab-bar .tab-right .add image {
  width: 48rpx;
  height: 48rpx;
}
.tab-bar .tab-right .more-img {
  padding-right: 32rpx;
  border: 1 px solid red;
}
.tab-bar .tab-right .more-img image {
  width: 52rpx;
  height: 52rpx;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 25px;
  padding-bottom: 32rpx;
}
.main {
  width: 100%;
  padding: 104rpx 32rpx 0;
}
.friend-list {
  height: 96rpx;
  padding: 16rpx 0;
}
.friend-list:active {
  background-color: #f3f6f6;
}
.friend-list .friend-list-left {
  position: relative;
  padding-left: 20rpx;
  float: left;
}
.friend-list .friend-list-left image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  background-color: #ffe431;
}
.friend-list .friend-list-left .tip {
  position: absolute;
  top: -6rpx;
  left: 88rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  background: #ff5d5b;
  border-radius: 50%;
  z-index: 8;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}
.friend-list .friend-list-right {
  padding-left: 148rpx;
}
.friend-list .friend-list-right .top {
  height: 50rpx;
}
.friend-list .friend-list-right .top .name {
  float: left;
  font-size: 36rpx;
  color: #273132;
  line-height: 50rpx;
  font-weight: 400;
}
.friend-list .friend-list-right .top .time {
  float: right;
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
  line-height: 50rpx;
  padding-right: 20rpx;
}
.friend-list .friend-list-right .text {
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

