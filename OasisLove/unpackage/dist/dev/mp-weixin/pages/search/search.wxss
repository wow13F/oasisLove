.tab-bar {
  z-index: 18;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
  background: white;
}
.tab-bar .tab-left {
  float: left;
  position: absolute;
  margin-left: 20rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  top: 50%;
}
.tab-bar .tab-left image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.tab-bar .tab-center {
  position: absolute;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  top: 50%;
  text-align: center;
}
.tab-bar .tab-right {
  width: 140rpx;
  position: absolute;
  right: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  top: 50%;
}
.tab-bar .tab-right .serch {
  display: inline-block;
  margin-right: 20rpx;
}
.tab-bar .tab-right .serch image {
  width: 52rpx;
  height: 52rpx;
}
.tab-bar .tab-right .add {
  display: inline-block;
  margin-right: 20rpx;
}
.tab-bar .tab-right .add image {
  width: 48rpx;
  height: 48rpx;
}
.tab-bar .tab-right .more-img {
