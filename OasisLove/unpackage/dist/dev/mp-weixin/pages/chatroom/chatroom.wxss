}
.chat {
  background: rgba(244, 244, 244, 0.96);
  height: 100%;
}
.chat .chat-main {
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 100rpx;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
}
.chat .chat-ls .chat-time {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.3);
  padding: 20rpx 0;
  text-align: center;
  line-height: 34rpx;
}
.chat .chat-ls .msg-m {
  display: flex;
  padding: 20rpx 0;
}
.chat .chat-ls .msg-m .user-img {
  flex: none;
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
}
.chat .chat-ls .msg-m .message {
  flex: none;
  max-width: 480rpx;
}
.chat .chat-ls .msg-m .message .msg-text {
  font-size: 32rpx;
  color: #273132;
  padding: 18rpx 24rpx;
  line-height: 44rpx;
}
.chat .chat-ls .msg-m .message .msg-img {
  max-width: 400rpx;
  border-radius: 20rpx;
}
.chat .chat-ls .msg-left {
  flex-direction: row;
}
.chat .chat-ls .msg-left .msg-text {
  margin-left: 16rpx;
  background-color: #fff;
  border-radius: 0 20rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-left .msg-img {
  margin-left: 16rpx;
}
.chat .chat-ls .msg-right {
  flex-direction: row-reverse;
}
.chat .chat-ls .msg-right .msg-text {
  margin-right: 16rpx;
  background-color: #fff260;
  border-radius: 0 20rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-right .msg-img {
  margin-right: 16rpx;
}

