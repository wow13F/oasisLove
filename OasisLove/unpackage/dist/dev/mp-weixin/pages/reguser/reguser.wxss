.content {
  padding-top: 25px;
}
.tab-bar {
  z-index: 9;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
  background-color: #ffffff;
}
.tab-bar .tab-left {
  float: left;
  width: 88rpx;
  height: 88rpx;
  padding-left: 32rpx;
}
.tab-bar .tab-left .text {
  display: inline-block;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 88rpx;
  color: #273132;
}
.tab-bar .tab-left .back {
  margin-top: 21rpx;
  width: 40rpx;
  height: 40rpx;
}
.logo {
  text-align: center;
}
.logo image {
  padding-top: 256rpx;
  width: 194rpx;
  height: 92rpx;
  margin: 0 auto;
}
.main {
  padding: 54rpx 60rpx 120rpx;
}
.main .title {
  font-size: 46rpx;
  font-weight: 500;
  color: #273132;
  line-height: 80rpx;
}
.main .inputs {
  padding-top: 8rpx;
}
.main .inputs input {
  padding-top: 40rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #273132;
  line-height: 88rpx;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.main .inputs .inputs-div {
  position: relative;
}
.main .inputs .employ, .main .inputs .invalid {
  position: absolute;
  right: 0;
  top: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #ff5d5b;
  line-height: 88rpx;
}
.main .inputs .ok {
  width: 38rpx;
  height: 30rpx;
  position: absolute;
  top: 76rpx;
  right: 0;
}
.main .inputs .look, .main .inputs .biyan {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 76rpx;
  right: 0;
}
.submit {
  width: 520rpx;
  height: 96rpx;
  background: #ffe431;
  box-shadow: 0px 50rpx 32rpx -36rpx rgba(255, 228, 49, 0.4);
  border-radius: 48rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #273132;
  letter-spacing: 0;
  font-weight: 500;
  line-height: 96rpx;
  text-align: center;
}
.submit1 {
  width: 520rpx;
  height: 96rpx;
  background: rgba(39, 40, 50, 0.2);
  border-radius: 48rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 0;
  font-weight: 500;
  line-height: 96rpx;
  text-align: center;
}

