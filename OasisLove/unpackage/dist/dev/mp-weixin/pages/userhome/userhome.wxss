}
.add-bt {
  position: fixed;
  bottom: -104rpx;
  width: 100%;
  height: 104rpx;
  padding: 12rpx 32rpx;
  box-sizing: border-box;
  z-index: 4;
  height: 104rpx;
  display: flex;
}
.add-bt .close {
  width: 172rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background: rgba(39, 40, 50, 0.2);
  border-radius: 10rpx;
  text-align: center;
  color: #273132;
}
.add-bt .send {
  flex: auto;
  width: 684rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 32rpx;
  font-size: 32rpx;
