.tab-bar {
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
  background: white;
}
.tab-bar .tab-left {
  float: left;
  position: absolute;
  margin-left: 20rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  top: 50%;
}
.tab-bar .tab-left image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.tab-bar .tab-right {
  width: 140rpx;
  position: absolute;
  right: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  top: 50%;
}
.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.bg .bg-bai {
  width: 100%;
  height: 100%;
  z-index: 22;
}
.bg .bg-img {
  width: 110%;
  height: 110%;
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  -webkit-filter: blur(16px);
          filter: blur(16px);
  opacity: 0.4;
}
.main {
  text-align: center;
  padding-top: 148rpx;
  z-index: 12;
}
.main .user-header {
  width: 412rpx;
  height: 412rpx;
  position: relative;
  margin: 0 auto;
}
.main .user-header .sex {
  position: absolute;
  bottom: 22rpx;
  right: 22rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  z-index: 2;
}
.main .user-header .sex image {
  width: 32rpx;
  height: 32rpx;
  padding: 16rpx;
}
.main .user-header .user-img {
  width: 400rpx;
  height: 400rpx;
  border-radius: 48rpx;
  border: 6rpx solid white;
  z-index: 1;
  box-shadow: 0px 36rpx 40rpx 0px rgba(39, 40, 50, 0.1);
}
.main .user-info {
  padding-top: 42rpx;
}
.main .user-info .name {
  font-size: 52rpx;
  color: #273132;
  line-height: 74rpx;
}
.main .user-info .nickname {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #273132;
}
.main .user-info .introudes {
  width: 552rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #273132;
  margin: 0 auto;
  line-height: 48rpx;
  font-weight: 200;
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 104rpx;
  padding: 12rpx 32rpx;
  box-sizing: border-box;
}
.bottom-bar .bottom-btn {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background: #ffe431;
  border-radius: 10rpx;
  text-align: center;
  color: #273132;
}
.add-msg {
  width: 100%;
  position: fixed;
  box-sizing: border-box;
  padding: 0 56rpx;
  background: white;
}
.add-msg .name {
  margin-top: 188rpx;
  padding-top: 168rpx 0 40rpx;
  font-size: 52rpx;
  color: #273132;
  line-height: 74rpx;
}
.add-msg .message {
  width: 100%;
  box-sizing: border-box;
  padding: 18rpx 16rpx;
  height: 420rpx;
  background: #f3f6f6;
